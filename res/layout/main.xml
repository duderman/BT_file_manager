<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/offWhite">
    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/offWhite"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:src="@drawable/bback"/>

            <ImageButton
                    android:id="@+id/home_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:src="@drawable/bhome"/>

            <ImageButton
                    android:id="@+id/help_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:src="@drawable/binfo"/>

            <ImageButton
                    android:id="@+id/blt_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="2dp"
                    android:padding="18dp"
                    android:src="@drawable/bb"/>
        </LinearLayout>

    </HorizontalScrollView>
    <TextView
            android:id="@+id/path_label"
            android:text="path is"
            android:textColor="@color/white"
            android:background="@color/black"
            android:maxLines="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/detail_label"
            android:textColor="@color/brightRed"
            android:background="@color/black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:drawSelectorOnTop="true"
            android:smoothScrollbar="true"
            android:longClickable="true"
            android:background="@color/black"
            android:id="@+id/android:list"/>

    <!--  Footer for Multi-select buttons -->
    <LinearLayout
            android:id="@+id/hidden_buttons"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:visibility="gone">
        <Button
                android:id="@+id/hidden_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Attach"/>
        <Button
                android:id="@+id/hidden_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"/>
        <Button
                android:id="@+id/hidden_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Copy"/>
        <Button
                android:id="@+id/hidden_move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Move"/>
    </LinearLayout>
</LinearLayout>

